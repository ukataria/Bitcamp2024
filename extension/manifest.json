{
  "manifest_version": 3,
  "name": "Image Greeting and Log",
  "version": "1.0",
  "description": "Add 'Hello' under images on any website and log image details",
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://guarded-wildwood-07790-f63d3116a68b.herokuapp.com/"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.twitter.com/*",
        "*://*.instagram.com/*",
        "*://*.pinterest.com/*",
        "*://*.tumblr.com/*",
        "*://*.imgur.com/*",
        "*://*.flickr.com/*",
        "*://*.reddit.com/*",
        "*://*.500px.com/*",
        "*://*.unsplash.com/*",
        "*://*.deviantart.com/*",
        "*://*.photobucket.com/*"
      ],
      "js": ["scripts/content.js"],
      "css": ["./style.css"] 
    }
  ]
}
