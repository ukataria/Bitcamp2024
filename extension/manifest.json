{
  "manifest_version": 3,
  "name": "Image Greeting and Log",
  "version": "1.0",
  "description": "Add 'Hello' under images on any website and log image details",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "defaultpage.html"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["scripts/content.js"],
      "css": ["style.css"] 
    }
  ]
}